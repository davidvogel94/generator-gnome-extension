{
  "compilerOptions": {
    "lib": ["ES2021"],
    "target": "ES2021",
    "baseUrl": "./src/",
    "outDir": "./build/",
    "resolveJsonModule": true,
    "declaration": false,
    "declarationMap": false,
    "sourceMap": false,
    "strictNullChecks": true,
    "strictPropertyInitialization": false,
    "alwaysStrict": true,
    "allowJs": true,
    "checkJs": true,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "moduleResolution": "Node",
    "paths": {
      "@gnome-extension/*": ["./*"]
    }
  },
  "typeRoots": ["./node_modules/@types", "./node_modules/@gi-types", "./imports.d.ts"],
  "include": ["src/**/*.ts", "src/**/*.js", "src/**/*.json"],
  "exclude": ["./build"]
}
